<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/cardview_light_background"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/avatars"
                tools:visibility="visible" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/user_id_demarcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/user_id_demarcate"
            android:textColor="@color/black"
            android:layout_below="@+id/cardView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/user_id_demarcate"
            android:layout_toRightOf="@+id/user_id_demarcate"
            android:layout_below="@+id/cardView"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_demarcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_id_demarcate"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/id_demarcate"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_id_demarcate"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/id_demarcate"
            android:layout_toRightOf="@+id/id_demarcate"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_demarcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_demarcate"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="@string/title_demarcate"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_demarcate"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/title_demarcate"
            android:layout_toRightOf="@+id/title_demarcate"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_centerHorizontal="true"
            android:text="Add Image"
            android:textSize="12sp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>